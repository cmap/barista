<a class="cmap-card-link" href="{{ url }}">
  <div id="{{ div_string }}" class="{{ span_class }}">
    <div class="col-sm-12" style="background-color: {{ fg_color }}">
        <div class="cmap-spacer-tiny"></div>
        <p class="cmap-center-text cmap-card-title-text">{{ title }}</p>
        <div style="min-height:2px"></div>
      </div>

    <div class="col-sm-12 cmap-card">

        <img src="{{ image }}" class="col-sm-4 img-responsive" alt="">
        <h4 class="col-sm-8 cmap-card-subtitle-text text-muted">{{ subtitle }}</h4>
        <div class="col-sm-12 cmap-spacer-tiny"></div>
    </div>
  </div>
</a>
